page {
  background: #F5F5F5;
}

swiper {
  height: 360rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.function {
  display: flex;
  padding: 30rpx 0;
  background: white;
}

.function-item {
  flex: 1;
}

.function-item image {
  display: block;
  margin: 0 auto;
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
}

.function-item text {
  display: block;
  margin-top: 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: #222222;
}

.product-show {
  margin-top: 40rpx;
  padding: 0 20rpx 30rpx;
  box-sizing: border-box;
  background: white;
}

.product-show:after {
  content: '';
  display: block;
  clear: both;
}

.product-show .top-title {
  display: flex;
  align-items: center;
  height: 116rpx;
  position: relative;
}

.text-title text:nth-of-type(1) {
  display: block;
  font-weight: bold;
  font-size: 30rpx;
  color: #222222;
}

.text-title text:nth-of-type(2) {
  display: block;
  font-size: 20rpx;
  color: #222222;
}

.top-title image {
  width: 390rpx;
  height: 54rpx;
  position: absolute;
  right: 0;
}

.group {
  width: calc(50% - 10rpx);
  height: 440rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.group.left {
  float: left;
}

.group.right {
  float: right;
}

.group-one image {
  width: 100%;
  height: 100%;
}

.group-one text {
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  line-height: 42rpx;
  padding-left: 18rpx;
  box-sizing: border-box;
  background: rgba(0, 0, 0, .6);
  font-size: 22rpx;
  color: #FFFFFF;
}

.group-two .min-img {
  width: 100%;
  height: calc(50% - 10rpx);
  position: relative;
}

.group-two .min-img image {
  width: 100%;
  height: 100%;
}

.group-two .min-img:first-of-type {
  margin-bottom: 20rpx;
}

.min-img text {
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  line-height: 42rpx;
  padding-left: 18rpx;
  box-sizing: border-box;
  background: rgba(0, 0, 0, .6);
  font-size: 22rpx;
  color: #FFFFFF;
}

.about-doujiayi {
  margin-top: 20rpx;
  padding: 0 20rpx 35rpx;
  background: white;
}

.about-doujiayi image {
  border-radius: 14rpx;
}

.about-title {
  padding: 16rpx 0;
}

.about-title text:nth-of-type(1) {
  display: block;
  font-weight: bold;
  font-size: 30rpx;
  color: #222222;
}

.about-title text:nth-of-type(2) {
  display: block;
  font-size: 20rpx;
  color: #222222;
}

.about-doujiayi image {
  display: block;
  width: 100%;
  height: 260rpx;
}


.need-read {
  margin-top: 20rpx;
  padding: 20rpx;
  background: white;
}

.need-read .read-title {
  display: block;
  line-height: 66rpx;
  padding-left: 10rpx;
  font-weight: bold;
  font-size: 30rpx;
  color: #222222;
  position: relative;
  z-index: 999;
}

.need-read .read-title:before {
  content: '';
  position: absolute;
  left: -4rpx;
  top: 6rpx;
  display: block;
  width: 38rpx;
  height: 38rpx;
  border-radius: 100%;
  background: #F32939;
  z-index: -1;
}

.read-item {
  margin-bottom: 14rpx;
}

.read-item:after {
  content: '';
  display: block;
  clear: both;
}

.read-item .black-dot {
  float: left;
  margin-top: 16rpx;
  margin-right: 10rpx;
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: black;
}

.item-content  {
  float: left;
  width: calc(100% - 30rpx);
}

.item-content text {
  display: block;
  line-height: 38rpx;
  font-size: 22rpx;
  color: #444444;
}

.tips {
  padding: 20rpx;
  font-size: 22rpx;
  color: #F32939;
}

