.amount {
  position: fixed;
  bottom: 0;
  padding-left: 20rpx;
  width: 100%;
  line-height: 78rpx;
  font-size: 26rpx;
  background: white;
}

.amount .total {
  color: #222;
}

.amount .money {
  font-weight: bold;
  color: #f32939;
}

.amount .pay {
  display: block;
  float: right;
  width: 200rpx;
  height: 100%;
  background: #f32939;
  text-align: center;
  font-size: 30rpx;
  color: white;
}

.amount .pay-count {
  display: block;
  float: right;
  padding: 0 20rpx;
  color: #666;
}
