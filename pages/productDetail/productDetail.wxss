.left-title .money {
  display: block;
  line-height: 80rpx;
  font-weight: bold;
  font-size: 34rpx;
  color: #f32939;
}

.left-title .has-sold {
  display: block;
  font-size: 20rpx;
  color: #b8b8b8;
}

.specs {
  height: 60rpx;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.specs text {
  display: block;
  font-size: 26rpx;
  color: #333;
}

.specs text:nth-of-type(2) {
  flex: 1;
  padding-right: 30rpx;
  text-align: right;
  color: #b8b8b8;
}

.specs image {
  display: block;
  width: 18rpx;
  height: 32rpx;
}

.fav-img {
  display: block;
  position: absolute;
  top: 40rpx;
  right: 36rpx;
  width: 44rpx;
  padding: 0;
  background: none;
  border: none;
  outline: none;
}

.fav-img:after {
  border: none;
}

.fav-img image {
  display: block;
  margin: 0 auto;
  width: 40rpx;
  height: 40rpx;
}

.fav-img text {
  display: block;
  text-align: center;
  line-height: 48rpx;
  font-size: 22rpx;
  color: #4a4a4a;
}

.alert-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

.specs-box {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  padding-bottom: 200rpx;
  background: white;
}

.specs-box .specs-profile {
  display: flex;
  align-items: center;
  height: 220rpx;
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ddd;
}

.specs-profile image {
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

.specs-profile .specs-name {
  flex: 1;
  height: 100%;
  position: relative;
}

.specs-name text:nth-of-type(1) {
  display: block;
  font-size: 28rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  word-wrap: break-word;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.specs-name text:nth-of-type(2) {
  display: block;
  font-weight: bold;
  font-size: 34rpx;
  color: #f32939;
}

.specs-name text:nth-of-type(3) {
  position: absolute;
  left: 0;
  bottom: 10rpx;
  display: block;
  font-size: 24rpx;
  color: #b8b8b8;
}

.specs-select {
  border-bottom: 1px solid #ddd;
  padding: 30rpx;
}

.specs-select > text {
  display: block;
  height: 50rpx;
  font-size: 26rpx;
  color: #333;
}

.specs-select .specs-list {
  display: flex;
}

.specs-list text {
  display: block;
  padding: 10rpx;
  margin: 0 10rpx 10rpx 0;
  background: #ddd;
  border-radius: 2rpx;
  font-size: 22rpx;
  color: #666;
}

.specs-list text.active {
  background: #f32939;
  color: white;
}

.specs-count {
  padding: 0 30rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #333;
  position: relative;
  border-bottom: 1rpx solid #ddd;
}

.specs-count .count {
  display: flex;
  align-items: center;
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #d8d8d8;
  border-radius: 2rpx;
  overflow: hidden;
}

.count .alter {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 46rpx;
  height: 40rpx;
}

.count text {
  padding: 0 24rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #222;
  border-left: 2rpx solid #d8d8d8;
  border-right: 2rpx solid #d8d8d8;
}

.confirm-specs {
  position: absolute;
  bottom: 0;
  display: block;
  width: 100%;
  line-height: 100rpx;
  background: #f32939;
  border-radius: 0;
  font-size: 32rpx;
  letter-spacing: 4rpx;
  color: white;
}

