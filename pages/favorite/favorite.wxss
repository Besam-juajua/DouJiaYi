page {
  background: #F5F5F5;
}

.order-list {
  
}

.order-item {
  display: flex;
  align-items: center;
  height: 240rpx;
  padding: 0 20rpx;
  background: white;
  margin-bottom: 10rpx;
  position: relative;
}

.order-item .title-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.order-item .order-specs {
  padding: 20rpx;
  box-sizing: border-box;
  max-width: 500rpx;
  height: 100%;
  position: relative;
}

.order-specs text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-specs text:nth-of-type(1) {
  display: block;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #222222;
}

.order-specs text:nth-of-type(2) {
  display: block;
  font-size: 22rpx;
  color: #666666;
}

.order-specs text:nth-of-type(3) {
  display: block;
  position: absolute;
  bottom: 30rpx;
  font-size: 30rpx;
  color: #C41D17;
}

.cancel-btn {
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
  height: 36rpx;
  line-height: 36rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  background: none;
  border: 2rpx solid #F32939;
  border-radius: 18rpx;
  font-size: 22rpx;
  color: #F32939;
}

.not-favorite {
  margin-top: 100rpx;
}

.not-favorite image {
  display: block;
  width: 250rpx;
  height: 198rpx;
  margin: 0 auto;
}

.not-favorite text {
  display: block;
  margin-top: 34rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999999;
}