page {
  background: #F5F5F5;
  padding-bottom: 100rpx;
}

.adress-list {
  background: white;
}

.adress-item {
  display: flex;
  align-items: center;
  height: 130rpx;
  overflow: hidden;
  border-bottom: 1px solid #F5F5F5;
}

.adress-item .profile {
  flex: 1;
  padding-left: 20rpx;
}

.name-phone text {
  margin-right: 20rpx;
  font-size: 30rpx;
  color: #111111;
}

.name-phone label {
  line-height: 30rpx;
  padding: 0 10rpx;
  background: #F32939;
  border-radius: 15rpx;
  font-size: 24rpx;
  color: white;
  
}

.profile .adress {
  display: block;
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #999999;
}

.adress-item .edit {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 124rpx;
  height: 84rpx;
  border-left: 2px solid #F5F5F5;
}

.edit image {
  width: 37rpx;
  height: 36rpx;
}

.edit text {
  display: block;
  font-size: 22rpx;
  color: #999999;
}

.btn-add {
  position: fixed;
  bottom: 0;
  display: block;
  width: 100%;
  height: 90rpx;
  border-radius: 0;
  font-size: 36rpx;
  line-height: 90rpx;
  letter-spacing: 10rpx;
  color: white;
  background: #F32939;
  opacity: .94;
}