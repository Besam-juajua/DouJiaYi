.product-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}

.img-group {
  width: 33.333%;
  height: 300rpx;
  padding: 20rpx 10rpx;
  padding-top: 0;
  box-sizing: border-box;
  position: relative;
}

.img-group image {
  width: 100%;
  height: 100%;
}

.img-group text {
  position: absolute;
  left: 10rpx;
  bottom: 0;
  display: block;
  width: calc(100% - 20rpx);
  line-height: 42rpx;
  padding: 0 18rpx;
  margin-bottom: 18rpx;
  box-sizing: border-box;
  background: rgba(0, 0, 0, .6);
  font-size: 22rpx;
  color: #FFFFFF;
}